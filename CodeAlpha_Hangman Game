import random

# Step 1: Word list
word_list = ["apple", "train", "water", "candy", "tiger"]

# Step 2: Choose a random word
secret_word = random.choice(word_list)
word_display = ["_" for _ in secret_word]
guessed_letters = []
wrong_guesses = 0
max_wrong_guesses = 6

print("ðŸŽ® Welcome to Hangman Game!")
print("Guess the word. You have 6 chances.")

# Step 3: Main game loop
while wrong_guesses < max_wrong_guesses and "_" in word_display:
    print("\nCurrent word: ", " ".join(word_display))
    guess = input("Enter a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("Please enter a **single alphabet** letter.")
        continue

    if guess in guessed_letters:
        print("You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in secret_word:
        print("âœ… Good guess!")
        for i in range(len(secret_word)):
            if secret_word[i] == guess:
                word_display[i] = guess
    else:
        wrong_guesses += 1
        print(f"âŒ Wrong guess! You have {max_wrong_guesses - wrong_guesses} chances left.")

# Step 4: End of game
if "_" not in word_display:
    print("\nðŸŽ‰ Congratulations! You guessed the word:", secret_word)
else:
    print("\nðŸ’€ Game Over! The word was:", secret_word)
